---
import { Image } from '@astrojs/image/components';
import logo from '../../assets/Logo-LaTrucco.png';
import Bottom from './Bottom';
import NavHome from './NavHome.astro';
---

<section
  class="relative h-[600px] bg-black/40 min-tall-mobile:h-[100dvh]">
  <video
    autoplay
    muted
    loop
    class="absolute -z-10 h-[600px] object-cover grayscale lg:w-screen min-tall-mobile:h-screen">
    <source
      src="/video.mp4"
      type="video/mp4"
    />
  </video>
  <NavHome />
  <Image
    alt="logo"
    src={logo}
    width={750}
    height={217.35}
    quality={100}
    class="mx-auto w-[90%] max-w-[750px] pt-24 xl:pt-0"
  />
  <Bottom client:load />
</section>
